{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "target": "esnext", // Use ofESThe latest language.
    "module": "esnext", // Use ofESModular language.
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
